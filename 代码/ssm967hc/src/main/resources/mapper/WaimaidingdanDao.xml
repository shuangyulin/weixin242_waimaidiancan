        <result property="caipinmingcheng" column="caipinmingcheng"/>
        <result property="caipinfenlei" column="caipinfenlei"/>
        <result property="caipintupian" column="caipintupian"/>
        <result property="peisongzhuangtai" column="peisongzhuangtai"/>
        <result property="caipinjiage" column="caipinjiage"/>
        <result property="dingcanshuliang" column="dingcanshuliang"/>
        <result property="dingdanjine" column="dingdanjine"/>
        <result property="xiadanshijian" column="xiadanshijian"/>
        <result property="cantingbianhao" column="cantingbianhao"/>
        <result property="dingdanbeizhu" column="dingdanbeizhu"/>
        <result property="yonghuming" column="yonghuming"/>
        <result property="shouji" column="shouji"/>
        <result property="shouhuodizhi" column="shouhuodizhi"/>
